<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="UserDisplayBox">
        <StackPanel x:Name="ProfileBox"
                    Orientation="Horizontal"
                    Grid.Row="2"
                    Grid.ColumnSpan="4"
                    Background="#242528">
            <Ellipse Height="30"
                     Width="30"
                     Margin="10,10,5,10">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="/Icons/snom_with_knife.jpg"
                                RenderOptions.BitmapScalingMode="Fant"/>
                </Ellipse.Fill>
            </Ellipse>

            <StackPanel VerticalAlignment="Center">
                <Label Content="MaoMao"
                       Foreground="White"
                       FontWeight="SemiBold"
                       FontSize="14"
                       Margin="0,-6,0,-6"/>
                <Label Content="Custom Status"
                       Foreground="#8E8E91"
                       FontSize="12"
                       FontWeight="Thin"
                       Margin="0,-6,0,-6"/>
            </StackPanel>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>